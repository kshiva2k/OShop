@model OShop.ViewModels.LoginViewModel
@{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>oShop | Log in</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/fontawesome-free/css/all.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- icheck bootstrap -->
        <link rel="stylesheet" href="~/icheck-bootstrap/icheck-bootstrap.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link href="~/toastr/toastr.css" rel="stylesheet" />
        <script src="~/plugins/common.js"></script>
    </head>
    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="#"><b>ABC</b>Gas Agency</a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Sign in to start your session</p>

                    @*<form action="../../index3.html" method="post">*@
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <div class="input-group mb-3">

                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @type = "text", @placeholder = "UserName", @autocomplete = "off" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="remember">
                                    <label for="remember">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                        @*</form>*@
                    }
                    <p class="mb-1">
                        <a href="#">I forgot my password</a>
                    </p>

                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery -->
        <script> var errormsg = '@ViewBag.Error' </script>
        <script src="~/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/toastr/toastr.min.js"></script>
        <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/js/adminlte.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#login').click(function () {
                    $('#formLogin').submit();
                });
                if (errormsg != '') {
                    showerror('Login', errormsg);
                }
            });
        </script>
    </body>
</html>
}