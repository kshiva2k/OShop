@model List<OShop.ViewModels.ShopViewModel>;
@{

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">List of shops</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-hover" >
                        <thead>
                            <tr>
                                <th>Shop no</th>
                                <th>Shop name</th>
                                <th>Shop category</th>
                                <th>Address</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Amount</th>
                                <th>Balance</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var shop in Model)
                            {
                            <tr>
                                <td>@shop.Code</td>
                                <td>@shop.Name</td>
                                <td>@shop.Shopcategory</td>
                                <td>@shop.Address</td>
                                <td>@shop.Phone</td>
                                <td>@shop.Email</td>
                                <td>@shop.Amount</td>
                                <td>@shop.OverallAmount</td>
                                <td><a href="#" class="btn btn-info"><i class="fas fa-edit"></i></a> <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
                            </tr>
                            }
                        </tbody>
                        @*<tfoot>
                                <tr>
                                    <th>Rendering engine</th>
                                    <th>Browser</th>
                                    <th>Platform(s)</th>
                                    <th>Engine version</th>
                                    <th>CSS grade</th>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
                <!-- /.card-body -->
            </div>

            </div></div>
            }
            <script>
    $(function () {
                    $("#example1").DataTable({
                        "paging": true,
                        "lengthChange": false,
                        "searching": false,
                        "ordering": true,
                        "info": true,
                        "autoWidth": false,
                        "responsive": true,
                    })
                });</script>
