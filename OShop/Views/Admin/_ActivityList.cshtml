@model List<OShop.ViewModels.DeliveryViewModel>;
@{
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Delivery List</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="list" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Shop name</th>
                        <th>Invoice date</th>
                        <th>Quantity</th>
                        <th>Invoice amount</th>
                        <th>Payment mode</th>
                        <th>DD/Cheque no.</th>
                        <th>Clear bill</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shop in Model)
                    {
                    <tr>
                        <td>@shop.ShopName</td>
                        <td>@shop.InvoiceDate</td>
                        <td>@shop.Quantity</td>
                        <td>@shop.Invoiceamount</td>
                        <td>@shop.Paymentmode</td>
                        <td>@shop.Paymentno</td>
                        @if (shop.Billcleared == 0)
                        {
                            <td><a id="clearbill" href="#" onclick="clearbill(@shop.Id)">Clear bill</a></td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                    }
                </tbody>
                @*<tfoot>
                        <tr>
                            <th>Rendering engine</th>
                            <th>Browser</th>
                            <th>Platform(s)</th>
                            <th>Engine version</th>
                            <th>CSS grade</th>
                        </tr>
                    </tfoot>*@
            </table>
        </div>
        <!-- /.card-body -->
    </div>
}
<script>
    $(function () {
       

        $("#list").DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        })
    });</script>